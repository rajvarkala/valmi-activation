{
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Destination Webhook",
    "type": "object",
    "required": ["authorization"],
    "additionalProperties": true,
    "properties": {
      "url": {
        "type": "string",
        "title": "URL",
        "description": "Webhook URL"
      },
      "authorization": {
        "type": "string",
        "title": "Authorization Header",
        "description": "Authorization header including the Bearer|Basic|Token prefix"
      },
      "method": {
        "type": "string",
        "enum": ["POST", "GET"]
      }
    }
  }
}
