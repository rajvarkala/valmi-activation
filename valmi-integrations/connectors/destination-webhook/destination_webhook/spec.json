{
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Destination Webhook",
    "type": "object",
    "required": [
      "url",
      "method"
    ],
    "additionalProperties": true,
    "properties": {
      "url": {
        "type": "string",
        "title": "URL",
        "description": "Webhook URL"
      },
      "headers": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Headers to be added to the http request. eg: Authorization: Bearer <token>"
      },
      "method": {
        "type": "string",
        "enum": [
          "POST",
          "GET"
        ]
      }
    }
  }
}