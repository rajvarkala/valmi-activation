name: 'valmi_postgres'

config-version: 2
version: '0.1'

profile: 'valmi_postgres'

model-paths: ["models"]
seed-paths: ["seeds"]
test-paths: ["tests"]
analysis-paths: ["analysis"]
macro-paths: ["macros"]

target-path: "target"
clean-targets:
    - "target"
    - "dbt_modules"
    - "logs"

require-dbt-version: [">=1.0.0", "<2.0.0"]

models:
  valmi_postgres:
      materialized: table
      staging:
        materialized: view


vars:
  source: "{{args['name']}}"
  snapshot:  "finalized_snapshot_{{args['sync_id']}}"
  stg_snapshot: "stg_snapshot_{{args['sync_id']}}"
  ignored_snapshot: "ignored_snapshot_{{args['sync_id']}}"
  transit_snapshot: "transit_snapshot_{{args['sync_id']}}"

  full_refresh: "{{args['full_refresh']}}" 
  columns: "{{args['columns']}}" 
  id_key: "{{args['id_key']}}" 